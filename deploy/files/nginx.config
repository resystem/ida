server {
  server_name accounts.idativista.org;
  
  location / {
    alias /usr/share/nginx/ida-accounts/;
    try_files $uri $uri/ /index.html;
  }

  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/accounts.idativista.org/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/accounts.idativista.org/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
  return 301 https://$host$request_uri;

  listen 80;
  listen [::]:80;
  return 404; # managed by Certbot
}

server {
    if ($host = accounts.idativista.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  server_name accounts.idativista.org;
    listen 80;
    return 404; # managed by Certbot
}